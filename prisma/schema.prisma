generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  cpf         String       @unique
  phone       String
  restaurants Restaurant[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model PaymentRestaurant {
  id           String                  @id @default(uuid())
  restaurant   Restaurant              @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId String
  status       PaymentRestaurantStatus
  createdAt    DateTime                @default(now())
  updateAt     DateTime                @updatedAt
}

model Restaurant {
  id                 String              @id @default(uuid())
  name               String
  slug               String              @unique
  description        String
  avatarImageUrl     String
  coverImageUrl      String
  isOpen             Boolean             @default(true)
  deliveryFee        Float               @default(0)
  allowDineIn        Boolean             @default(true)
  allowTakeaway      Boolean             @default(true)
  userId             String
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  menuCategorias     MenuCategory[] //Não salva no bd, mas referencia
  products           Product[]
  orders             Order[]
  createdAt          DateTime            @default(now())
  updateAt           DateTime            @updatedAt
  paymentRestaurants PaymentRestaurant[]
}

model MenuCategory {
  id           String     @id @default(uuid())
  name         String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  //Não salva no BD mas diz que está referenciando a model Reastaurant 
  //Pega o nome do model, relaciona com restaurantId daqui e pega com referecences o id de Restaurant
  restaurantId String
  products     Product[]
  additionals  CategoryAdditional[]
  requiredAdditionalGroups RequiredAdditionalGroup[]
  createdAt    DateTime   @default(now())
  updateAt     DateTime   @updatedAt
}

model Product {
  id             String         @id @default(uuid())
  name           String
  description    String
  price          Float //Para não atrapalhar o next, usa-se float ao invés de decimal
  imageUrl       String
  ingredients    String[]
  sizes          ProductSize[]
  orderProducts  OrderProduct[]
  restaurant     Restaurant     @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId   String
  menuCategory   MenuCategory   @relation(fields: [menuCategoryId], references: [id], onDelete: Cascade)
  menuCategoryId String
  createdAt      DateTime       @default(now())
  updateAt       DateTime       @updatedAt
}

model ProductSize {
  id        String   @id @default(uuid())
  name      String
  price     Float
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Order {
  id                   Int               @id @default(autoincrement())
  //Cada pedido vai ter uma ordem, caso o primeiro esteja com id 1, o segundo recebe 2, e assim por diante, vai se complementando  
  total                Float
  productsSubtotal     Float              @default(0)
  sizesSubtotal        Float              @default(0)
  additionalsSubtotal  Float              @default(0)
  status               OrderStatus
  consumptionMethod    ConsumptionMethod
  orderProducts        OrderProduct[]
  restaurant           Restaurant        @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId         String
  customerName         String
  customerCpf          String
  customerEmail        String?
  customerPhone        String?
  deliveryFee          Float              @default(0)
  sizeName             String?
  sizePrice            Float?
  deliveryStreet       String?
  deliveryNumber       String?
  deliveryComplement   String?
  deliveryNeighborhood String?
  deliveryCity         String?
  deliveryState        String?
  deliveryZipCode      String?
  createdAt            DateTime          @default(now())
  updateAt             DateTime          @updatedAt
}

model OrderProduct {
  id        String   @id @default(uuid())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   Int
  quantity  Int
  price     Float
  basePrice Float    @default(0)
  sizeName  String?
  sizePrice Float?
  sizeId    String?
  additionals OrderProductAdditional[]
  requiredAdditionals OrderProductRequiredAdditional[]
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model CategoryAdditional {
  id             String        @id @default(uuid())
  name           String
  price          Float
  imageUrl       String
  menuCategory   MenuCategory  @relation(fields: [menuCategoryId], references: [id], onDelete: Cascade)
  menuCategoryId String
  orderProductAdditionals OrderProductAdditional[]
  createdAt      DateTime      @default(now())
  updateAt       DateTime      @updatedAt
}

model RequiredAdditionalGroup {
  id             String                 @id @default(uuid())
  title          String
  requiredQuantity Int
  menuCategory   MenuCategory           @relation(fields: [menuCategoryId], references: [id], onDelete: Cascade)
  menuCategoryId String
  items          RequiredAdditionalItem[]
  createdAt      DateTime               @default(now())
  updateAt       DateTime               @updatedAt
}

model RequiredAdditionalItem {
  id        String   @id @default(uuid())
  name      String
  imageUrl  String
  group     RequiredAdditionalGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId   String
  orderProductRequireds OrderProductRequiredAdditional[]
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model OrderProductAdditional {
  id                     String             @id @default(uuid())
  orderProduct           OrderProduct       @relation(fields: [orderProductId], references: [id], onDelete: Cascade)
  orderProductId         String
  name                   String
  price                  Float
  quantity               Int
  categoryAdditional     CategoryAdditional? @relation(fields: [categoryAdditionalId], references: [id], onDelete: SetNull)
  categoryAdditionalId   String?
  createdAt              DateTime           @default(now())
  updateAt               DateTime           @updatedAt
}

model OrderProductRequiredAdditional {
  id                     String              @id @default(uuid())
  orderProduct           OrderProduct        @relation(fields: [orderProductId], references: [id], onDelete: Cascade)
  orderProductId         String
  name                   String
  groupTitle             String
  quantity               Int
  requiredAdditionalItem RequiredAdditionalItem? @relation(fields: [requiredAdditionalItemId], references: [id], onDelete: SetNull)
  requiredAdditionalItemId String?
  createdAt              DateTime            @default(now())
  updateAt               DateTime            @updatedAt
}

enum OrderStatus {
  PENDING
  ACCEPTED
  IN_PREPARATION
  FINISHED
  OUT_FOR_DELIVERY
  CANCELLED
}

enum ConsumptionMethod {
  TAKEANAY
  DINE_IN
}

enum PaymentRestaurantStatus {
  CONFIRMED
  FAILED
  PENDING
}

enum SubscriptionStatus {
  ACTIVE
  WARNING_3_DAYS
  WARNING_2_DAYS
  WARNING_1_DAY
  EXPIRED
  GRACE_PERIOD
  INACTIVE
  CANCELLED
}
